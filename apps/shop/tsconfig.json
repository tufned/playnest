{
  "extends": ["@playnest/typescript-config/next-library.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@playnest/utils": ["../../packages/utils/src/index.bundler.ts"],
      "@playnest/utils/*": ["../../packages/utils/src/*"]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".turbo",
    ".next",
    "coverage",
    "src/**/__tests__/**/*",
    "**/tests/**/*",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
