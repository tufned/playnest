{
  "extends": "@playnest/typescript-config/node-library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@playnest/utils": ["../../packages/utils/src"],
      "@playnest/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".turbo",
    "dist",
    "coverage",
    "src/**/__tests__/**/*",
    "**/tests/**/*",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
