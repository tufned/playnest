{
  "extends": ["@playnest/typescript-config/next-library.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "eslint.config.mjs",
    "prettier.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
