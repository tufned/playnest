{
  "name": "playnest",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "api:dev": "turbo run dev --filter=@playnest/api",
    "mobile:dev": "turbo run dev --filter=@playnest/mobile",
    "mobile:android": "turbo run android --filter=@playnest/mobile",
    "mobile:ios": "turbo run ios --filter=@playnest/mobile"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
