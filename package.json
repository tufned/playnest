{
  "name": "playnest",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@playnest/web --filter=@playnest/api --filter=@playnest/utils",
    "dev:mobile": "turbo dev --filter=@playnest/mobile --filter=@playnest/api --filter=@playnest/utils",
    "api:dev": "turbo dev --filter=@playnest/api",
    "web:dev": "turbo dev --filter=@playnest/web",
    "mobile:dev": "turbo dev --filter=@playnest/mobile",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/api/src/**/*.{js,ts}": [
      "npm run format",
      "turbo lint --filter=@playnest/api --"
    ],
    "apps/mobile/**/*.{js,jsx,ts,tsx}": [
      "npm run format",
      "turbo lint --filter=@playnest/mobile --"
    ],
    "packages/utils/src/**/*.{js,ts}": [
      "npm run format",
      "turbo lint --filter=@playnest/utils --"
    ],
    "**/*.{json,md,config.js,config.mjs,yaml,yml}": [
      "prettier --write"
    ]
  }
}
