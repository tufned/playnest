{
  "name": "playnest",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "dev": "turbo dev",
    "start": "turbo start --filter=@playnest/shop --filter=@playnest/api --filter=@playnest/admin",
    "dev:shop": "turbo dev --filter=@playnest/shop --filter=@playnest/api --filter=@playnest/shared --filter=@playnest/web",
    "dev:admin": "turbo dev --filter=@playnest/admin --filter=@playnest/api --filter=@playnest/shared --filter=@playnest/web",
    "dev:api": "turbo dev --filter=@playnest/api --filter=@playnest/shared",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "prepare": "husky install",
    "prisma:generate": "pnpm --filter=@playnest/api generate",
    "prisma:migrate": "pnpm --filter=@playnest/api migrate",
    "prisma:deploy": "pnpm --filter=@playnest/api deploy",
    "push-publish": "sh shell/push-publish.sh"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  }
}
